            <bool n="7" alias="/systems/safety/airbag/side"/>
            <bool n="8" alias="/systems/safety/aeb_on"/>
            <bool n="9" alias="/controls/lighting/indicator/left_switch"/>
            <bool n="10" alias="/controls/lighting/indicator/right_switch"/>
